@page
@using KerykeionCmsCore.Enums
@model KerykeionCmsUI.Areas.KerykeionCms.Pages.Images.IndexModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="col-sm-6 border border-info p-3">
    <h3 class="border-white border-bottom pb-2">@Model.TxtAddImage</h3>
    <form method="post" asp-page-handler="Add" class="p-3" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Vm.Title">@Model.TitleDisplay</label>
            <input class="form-control" asp-for="Vm.Title"
                   data-val="true" data-val-required="@Model.TitleRequiredError"
                   data-val-length-max="30" data-val-length-min="2" data-val-length="@Model.TitleLengthError" />
            <span asp-validation-for="Vm.Title" class="text-danger"></span>
        </div>
        @foreach (var name in Model.ForeignKeyPropertyNames)
        {
            <div class="form-group">
                <label for="FOREIGNKEY-@name">@name</label>
                <input id="FOREIGNKEY-@name" name="FOREIGNKEY-@name" class="form-control" />
            </div>
        }
        <div class="form-group">
            <label asp-for="Vm.File">@Model.ImageDisplay</label>
            <input class="form-control" asp-for="Vm.File" type="file"
                   data-val="true" data-val-required="@Model.FileRequiredError" />
            <span asp-validation-for="Vm.File" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="@Model.BtnAddValue" />
        </div>
    </form>
</div>


@if (Model.Images.Count > 0)
{
    <div class="row border-bottom border-secondary mt-3">
        <div class="col-sm-6">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>
    <div class="mt-5 row pb-1 border-bottom border-secondary">
        <div class="col-sm-3">

        </div>
        <div class="col-sm-3">
            <h5>
                <a class="text-inherit" asp-page-handler="SortName" id="sort-images-by-name">
                    @Model.TitleDisplay
                    <i class="fa fa-sort-alpha-asc" aria-hidden="true"></i>
                    <input type="hidden" value="@KerykeionCmsSortingOrder.Ascending" />
                </a>
            </h5>
        </div>
        <div class="col-sm-3">
            <h5>
                <a class="text-inherit" asp-page-handler="SortDateTime" id="sort-images-by-datetime">
                    @Model.TxtAddedOn
                    <i class="fa fa-sort" aria-hidden="true"></i>
                    <input type="hidden" value="@KerykeionCmsSortingOrder.None" />
                </a>
            </h5>
        </div>
        <div class="col">

        </div>
    </div>
    <div id="images-wrapper" class="mt-2">
        @foreach (var item in Model.Images)
        {
            <div class="row pt-2 pb-2 border border-secondary mb-1">
                <div class="col-sm-3">
                    <img src="@item.Url" class="img-fluid" />
                </div>
                <div class="col-sm-3">
                    <p>
                        @item?.Name
                    </p>
                </div>
                <div class="col-sm-3">
                    <p>
                        @item?.DateTimeCreated
                    </p>
                </div>
                <div class="col text-right d-block">
                    <a asp-page="/Images/Update" class="btn btn-info d-inline-block" asp-route-id="@item.Id">
                        @Model.BtnDetailsValue
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    </a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="ml-1 d-inline-block">
                        <button type="submit" class="btn btn-danger">
                            @Model.BtnDeleteValue
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
}



<form id="verif-token-holder" method="post"></form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}